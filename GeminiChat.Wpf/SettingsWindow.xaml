<Window x:Class="GeminiChat.Wpf.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeminiChat.Wpf"
        mc:Ignorable="d"
        Title="Настройки" Height="320" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#FAFAFA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Секция выбора шрифта -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Шрифт:" FontWeight="Medium" VerticalAlignment="Center"/>
            <ComboBox Grid.Column="1" 
                      ItemsSource="{Binding SystemFonts}"
                      SelectedItem="{Binding SelectedFontFamily}"
                      VerticalContentAlignment="Center"
                      Padding="5"/>
        </Grid>

        <!-- Секция выбора размера шрифта -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Размер:" FontWeight="Medium" VerticalAlignment="Center"/>
            <!-- Комментарий теперь находится в правильном месте, вне тега -->
            <!-- 1. Диапазон увеличен -->
            <Slider x:Name="FontSizeSlider" Grid.Column="1" 
                    Minimum="10" Maximum="32" 
                    Value="{Binding SelectedFontSize}"
                    IsSnapToTickEnabled="True" TickFrequency="1"
                    VerticalAlignment="Center"/>
            <!-- 2. Отображение числового значения -->
            <TextBlock Grid.Column="2" 
                       Text="{Binding ElementName=FontSizeSlider, Path=Value, StringFormat={}{0:F0}}"
                       MinWidth="25"
                       TextAlignment="Center"
                       FontWeight="Medium"
                       VerticalAlignment="Center" Margin="10,0,0,0"/>
        </Grid>

        <!-- 3. Область предпросмотра -->
        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Margin="0,20,0,20" Padding="10">
            <TextBlock Text="Вот так будет выглядеть текст в чате."
                       FontFamily="{Binding SelectedFontFamily}"
                       FontSize="{Binding SelectedFontSize}"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Кнопки управления -->
        <!-- Убрано некорректное свойство Grid.ColumnSpan -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" IsDefault="True" MinWidth="90" Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="Отмена" IsCancel="True" MinWidth="90" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
